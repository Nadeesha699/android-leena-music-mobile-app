<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgrounds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MusicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <ToggleButton
            android:id="@+id/btn_theme"
            android:layout_width="34dp"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/baseline_brightness_high_24"
            android:text="ToggleButton"
            android:textColor="#00FFFFFF"
            android:textColorHint="#00FFFFFF" />
    </LinearLayout>

    <ToggleButton
        android:id="@+id/btn_magic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:background="@drawable/baseline_auto_fix_high_24"
        android:text="ToggleButton"
        android:textColor="#00FFFFFF"
        android:textColorHint="#00FFFFFF" />

    <ImageView
        android:id="@+id/queue_traverce"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="80dp"
        android:foregroundGravity="right"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_library_music_24"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/img_main_back"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="80dp"
        android:foregroundGravity="center_vertical"
        app:srcCompat="@drawable/baseline_music_note_24" />

    <TextView
        android:id="@+id/txt_m_name"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@android:style/Widget.Material.SeekBar"
        android:layout_width="302dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_play" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_left_speed"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/baseline_keyboard_double_arrow_left_24"
            android:textColorHint="#00FFFFFF" />

        <Button
            android:id="@+id/btn_backword"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/baseline_arrow_left_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_play" />

        <ToggleButton
            android:id="@+id/btn_play"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/baseline_play_arrow_24"
            android:textColor="#00FFFFFF" />

        <Button
            android:id="@+id/btn_forward"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/baseline_arrow_right_24"
            app:layout_constraintStart_toEndOf="@+id/btn_play" />

        <Button
            android:id="@+id/btn_right_speed"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/baseline_keyboard_double_arrow_right_24"
            android:textColorHint="#00FFFFFF" />
    </LinearLayout>

</LinearLayout>